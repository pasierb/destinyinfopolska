<div class="card">
  <div class="card-image">
    <% if user.profile_image.present? %>
      <%= image_tag user.profile_image.url %>
    <% end %>
  </div>

  <div class="card-content">
    <span class="card-title"><%= user.username %></span>
    <% if user.description.present? %>
      <p>
        <%= user.description.html_safe %>
      </p>
    <% end %>

    <% if user.twitch_username.present? %>
      <%= content_tag 'dip-twitch-user-status' , "", ":login" => user.twitch_username.to_json %>
    <% end %>
  </div>
  <div class="card-action">
    <% if user.twitch_username.present? %>
        <%= link_to user.twitch_username, "https://www.twitch.tv/#{user.twitch_username}", class: "social-media-icon twitch", target: "_blank" %>
    <% end %>
    <% if user.youtube_username.present? %>
        <%= link_to user.twitch_username, "https://www.youtube.com/channel/#{user.youtube_username}", class: "social-media-icon youtube", target: "_blank" %>
    <% end %>
    <% if user.twitter_username.present? %>
        <%= link_to user.twitter_username, "https://www.twitter.com/#{user.twitter_username}", class: "social-media-icon twitter", target: "_blank" %>
    <% end %>
    <% if user.psn_username.present? %>
        <span class="social-media-icon psn">></span>
    <% end %>
  </div>
</div>
