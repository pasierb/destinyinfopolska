<div class="row">
  <div class="col s12 m12 l7 xl9">

    <% if @posts.any? %>
      <div class="center">
        <%= paginate @posts, params: { route_set: :refinery } %>
      </div>

      <div class="row">
        <%- @posts.each do |post| %>
          <div class="col s12 m12 l6 xl4">
            <%= render "/refinery/blog/shared/post", post: post %>
          </div>
        <% end %>
      </div>

      <div class="center">
        <%= paginate @posts, params: { route_set: :refinery } %>
      </div>
    <% else %>
      <p><%= t('.no_blog_articles_yet') %></p>
    <% end %>

  </div>
  <div class="col s12 m12 l5 xl3">
    <%= render '/refinery/blog/shared/body_content_right' %>
  </div>
</div>

<% content_for :stylesheets, stylesheet_link_tag('refinery/blog/frontend') %>
