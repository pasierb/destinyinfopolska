<h2><%= @page.title %></h2>

<div class="row">
  <div class="col-sm-12">
    <% @page.parts.where(slug: 'body').each do |part| %>
      <%- if part.body.present? %>
        <article class="page-body">
          <%= part.body.html_safe %>
        </article>
      <% end %>
    <% end %>
  </div>
</div>

<%- Refinery::Authentication::Devise::User.all.each do |user| %>
  <div class="row">
    <div class="col-lg-3">
      <% if user.profile_image.present? %>
        <%= image_tag user.profile_image.url %>
      <% end %>
    </div>
    <div class="col-lg-9">
      <h3><%= user.username %></h3>
      <% if user.description.present? %>
        <p>
          <%= user.description.html_safe %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>
